{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "declaration-property-unit-allowed-list": {
        "/^border/": ["px"],
        "/^padding|^gap/": ["rem"]
    },
    "unit-allowed-list": ["%", "deg", "px", "rem", "ms", "vh", "cqw", "fr", "cqh"]
  },
  "overrides": [
    {
      "files": [
        "**/*.{css,scss}"
      ]
    }
  ]
}